<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.shubhankar02.helloandroid.MainActivity">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="222dp"
        android:scaleType="center"
        android:src="@drawable/hqdefault"
        android:contentDescription="@string/content_description"/>

    <TextView
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="150dp"
        android:text="@string/business_name"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/line1"
        android:layout_alignStart="@+id/line1"
        android:layout_alignTop="@+id/line1"
        android:layout_marginTop="40dp"
        android:text="@string/Address_line1"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/line3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/line2"
        android:layout_alignRight="@+id/line2"
        android:layout_below="@+id/line2"
        android:layout_marginTop="20dp"
        android:text="@string/Address_line2"
        android:textAlignment="center"/>


</RelativeLayout>
